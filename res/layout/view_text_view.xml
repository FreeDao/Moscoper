<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

<com.skycober.socialfarm.customview.smartImageView.SmartImageView
        android:id="@+id/user_avatar"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_margin="10dip"
        android:scaleType="fitXY"/>
    <ImageView
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_margin="10dip"
        android:scaleType="fitXY"
        android:background="@drawable/avater_bg" />

    

    <TextView
        android:id="@+id/com_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topbarLayout"
        android:layout_marginLeft="5dip"
        android:layout_marginTop="20dip"
        android:layout_toRightOf="@+id/user_avatar"
        android:textColor="@color/gray_54"
        android:textSize="17dip" />

    <TextView
        android:id="@+id/com_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/com_name"
        android:layout_marginLeft="5dip"
        android:layout_marginTop="7dip"
        android:layout_toRightOf="@+id/user_avatar"
        android:textColor="@color/gray_66"
        android:textSize="14dip" />
</RelativeLayout>